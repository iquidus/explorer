.panel.panel-default
  .panel-heading
    h3.panel-title #{settings.locale.rl_current_balance} 
  table.table.table-hover.table-bordered(cellspacing="0")
    thead
      tr
        th.text-center
          span.fa.fa-flag-checkered
        th.text-center #{settings.locale.tx_address}
        th.text-center.hidden-xs #{settings.locale.rl_balance} (#{settings.symbol})
        th.text-center.hidden-xs %
    tbody
      - var count = 0
      each item in balance
        - count = count + 1
        - var itemFixed = item.balance / 100000000
        - var percentage = (itemFixed / stats.supply) * 100
        tr
          td(style='text-align:center; font-family:monospace; font-size:100%;')
            =count
          td
            a(style='text-align:left; font-family:monospace; font-size:100%;' href='/address/#{item.a_id}') #{item.a_id}
            include ./rl_labels.jade
          td.hidden-xs(style='text-align:right; font-family:monospace; font-size:100%;')
            =itemFixed.toFixed(8)
          td.hidden-xs(style='text-align:right; font-family:monospace; font-size:100%;')
            =percentage.toFixed(2)

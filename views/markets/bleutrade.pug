extends menu

block market_view
  .row
    .col-md-10  
      .card.card-default
        .card-header
          strong '+ settings.locale.bleutrade} - '+ marketdata.coin}/'+ marketdata.exchange} - '+ settings.locale.mkt_hours}
          a(href='#')
            span.fa.fa-line-chart.pull-right.view-chart-disabled.iquidus.market-toggle(data-toggle='tooltip', data-placement='bottom', title=''+ settings.locale.mkt_no_chart}') 
        table.table.table-bordered.summary-table 
          thead
            tr
              th '+ settings.locale.mkt_high}
              th '+ settings.locale.mkt_low}
              th '+ settings.locale.mkt_volume}
              th.hidden-xs '+ settings.locale.mkt_top_bid}
              th.hidden-xs '+ settings.locale.mkt_top_ask}
              th.hidden-xs '+ settings.locale.mkt_yesterday}
              th.hidden-xs '+ settings.locale.mkt_last}
              th '+ settings.locale.mkt_change}
          tbody
            tr
              td '+ parseFloat(marketdata.data.summary.High).toFixed(settings.decimal_places)}
              td '+ parseFloat(marketdata.data.summary.Low).toFixed(settings.decimal_places)}
              td '+ parseFloat(marketdata.data.summary.Volume).toFixed(settings.decimal_places)}
              td.hidden-xs '+ parseFloat(marketdata.data.summary.Bid).toFixed(settings.decimal_places)}
              td.hidden-xs '+ parseFloat(marketdata.data.summary.Ask).toFixed(settings.decimal_places)}
              td.hidden-xs '+ parseFloat(marketdata.data.summary.PrevDay).toFixed(settings.decimal_places)}
              td.hidden-xs '+ parseFloat(marketdata.data.summary.Last).toFixed(settings.decimal_places)}
              - var bleutrade_change = (100 - ((parseFloat(marketdata.data.summary.PrevDay)/parseFloat(marketdata.data.summary.Last))*100)).toFixed(2);
              if bleutrade_change >= 0
                td.table-success +'+ bleutrade_change} %
              else
                td.table-danger '+ bleutrade_change} %
  .row
    .col-md-6.col-xs-12
      .card.card-default
        .card-header
          h3.card-title '+ settings.locale.mkt_buy_orders}
        table.table.table-striped.table-bordered.order-table
          thead
            tr
              th '+ settings.locale.mkt_price} ('+ marketdata.exchange})
              th '+ settings.locale.mkt_amount} ('+ marketdata.coin})
              th.hidden-xs '+ settings.locale.mkt_total} ('+ marketdata.exchange})
          tbody
            each buy in marketdata.data.buys
              tr
                td
                  =parseFloat(buy.price).toFixed(settings.decimal_places)
                td
                  =parseFloat(buy.amount).toFixed(settings.decimal_places)
                td.hidden-xs
                  =parseFloat(buy.total).toFixed(settings.decimal_places)
    .col-md-6.col-xs-12
      .card.card-default
        .card-header
          h3.card-title '+ settings.locale.mkt_sell_orders}
        table.table.table-striped.table-bordered.order-table
          thead
            tr
              th '+ settings.locale.mkt_price} ('+ marketdata.exchange})
              th '+ settings.locale.mkt_amount} ('+ marketdata.coin})
              th.hidden-xs '+ settings.locale.mkt_total} ('+ marketdata.exchange})
          tbody
            each sell in marketdata.data.sells
              tr
                td
                  =parseFloat(sell.price).toFixed(settings.decimal_places)
                td
                  =parseFloat(sell.amount).toFixed(settings.decimal_places)
                td.hidden-xs
                  =parseFloat(sell.total).toFixed(settings.decimal_places)
  .row   
    .col-md-10
      .card.card-default
        .card-header
          h3.card-title '+ settings.locale.mkt_trade_history}
        table.table.table-hover.history-table.table-bordered(cellspacing="0")
          thead
            tr
              th.hidden-xs '+ settings.locale.mkt_type}
              th '+ settings.locale.mkt_amount} ('+ marketdata.coin})
              th '+ settings.locale.mkt_price} ('+ marketdata.exchange})
              th '+ settings.locale.mkt_total} ('+ marketdata.exchange})
              th.hidden-xs '+ settings.locale.mkt_time_stamp}
          tbody
            each order in marketdata.data.history
              if order.OrderType == "BUY"
                tr.table-success
                  td.hidden-xs
                    =order.OrderType
                  td
                    =order.Quantity
                  td
                    =order.Price
                  td
                    =order.Total
                  td.hidden-xs
                    =order.TimeStamp
              else
                tr.table-danger 
                  td.hidden-xs
                    =order.OrderType
                  td
                    =order.Quantity
                  td
                    =order.Price
                  td
                    =order.Total
                  td.hidden-xs
                    =order.TimeStamp
      .footer-padding
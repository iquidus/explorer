extends menu

block market_view
  script.
    console.log(''+ marketdata.data}');
  .row
    .col-md-10  
      .card.card-default
        .card-header
          strong '+ settings.locale.bittrex} - '+ marketdata.coin}/'+ marketdata.exchange} - '+ settings.locale.mkt_hours}
          a(href='#')
            span.fa.fa-line-chart.pull-right.view-chart-disabled.iquidus.market-toggle(data-toggle='tooltip', data-placement='bottom', title=''+ settings.locale.mkt_no_chart}') 
        table.table.table-bordered.summary-table 
          thead
            tr
              th '+ settings.locale.mkt_high}
              th '+ settings.locale.mkt_low}
              th '+ settings.locale.mkt_volume}
              th.hidden-xs '+ settings.locale.mkt_top_bid}
              th.hidden-xs '+ settings.locale.mkt_top_ask}
              th.hidden-xs '+ settings.locale.mkt_yesterday}
              th.hidden-xs '+ settings.locale.mkt_last}
              th '+ settings.locale.mkt_change}
          tbody
            tr
              td '+ marketdata.data.summary.High.toFixed(settings.decimal_places)}
              td '+ marketdata.data.summary.Low.toFixed(settings.decimal_places)}
              td '+ marketdata.data.summary.Volume.toFixed(settings.decimal_places)}
              td.hidden-xs '+ marketdata.data.summary.Bid.toFixed(settings.decimal_places)}
              td.hidden-xs '+ marketdata.data.summary.Ask.toFixed(settings.decimal_places)}
              td.hidden-xs '+ marketdata.data.summary.PrevDay.toFixed(settings.decimal_places)}
              td.hidden-xs '+ marketdata.data.summary.Last.toFixed(settings.decimal_places)}
              - var bittrex_change = (100 - ((parseFloat(marketdata.data.summary.PrevDay)/parseFloat(marketdata.data.summary.Last))*100)).toFixed(2);
              if bittrex_change >= 0
                td.table-success +'+ bittrex_change} %
              else
                td.table-danger '+ bittrex_change} %
  .row
    .col-md-6.col-xs-12
      .card.card-default
        .card-header
          h3.card-title '+ settings.locale.mkt_buy_orders}
        table.table.table-striped.table-bordered.order-table
          thead
            tr
              th '+ settings.locale.mkt_price} ('+ marketdata.exchange})
              th '+ settings.locale.mkt_amount} ('+ marketdata.coin})
              th.hidden-xs '+ settings.locale.mkt_total} ('+ marketdata.exchange})
          tbody
            each buy in marketdata.data.buys
              tr
                td
                  =buy.price
                td
                  =buy.amount
                td.hidden-xs
                  =buy.total
    .col-md-6.col-xs-12
      .card.card-default
        .card-header
          h3.card-title '+ settings.locale.mkt_sell_orders}
        table.table.table-striped.table-bordered.order-table
          thead
            tr
              th '+ settings.locale.mkt_price} ('+ marketdata.exchange})
              th '+ settings.locale.mkt_amount} ('+ marketdata.coin})
              th.hidden-xs '+ settings.locale.mkt_total} ('+ marketdata.exchange})
          tbody
            each sell in marketdata.data.sells
              tr
                td
                  =sell.price
                td
                  =sell.amount
                td.hidden-xs
                  =sell.total
  .row   
    .col-md-10
      .card.card-default
        .card-header
          h3.card-title '+ settings.locale.mkt_trade_history}
        table.table.table-hover.history-table.table-bordered(cellspacing="0")
          thead
            tr
              th.hidden-xs '+ settings.locale.mkt_type}
              th '+ settings.locale.mkt_amount} ('+ marketdata.coin})
              th '+ settings.locale.mkt_price} ('+ marketdata.exchange})
              th '+ settings.locale.mkt_total} ('+ marketdata.exchange})
              th.hidden-xs '+ settings.locale.mkt_time_stamp}
          tbody
            each order in marketdata.data.history
              if order.OrderType == 'BUY'
                tr.table-success
                  td.hidden-xs
                    =order.OrderType
                  td
                    =order.Quantity.toFixed(settings.decimal_places)
                  td
                    =order.Price.toFixed(settings.decimal_places)
                  td
                    =order.Total.toFixed(settings.decimal_places)
                  td.hidden-xs
                    =order.TimeStamp
              else
                tr.table-danger 
                  td.hidden-xs
                    =order.OrderType
                  td
                    =order.Quantity.toFixed(settings.decimal_places)
                  td
                    =order.Price.toFixed(settings.decimal_places)
                  td
                    =order.Total.toFixed(settings.decimal_places)
                  td.hidden-xs
                    =order.TimeStamp
      .footer-padding
